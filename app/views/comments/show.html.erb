<p style="color: green"><%= notice %></p>

<%= render @comment %>

<div>
  <% if can? :edit, @comment %>
  <%= link_to "Edit this comment", edit_movie_comment_path(@comment) %>

  <%= button_to "Destroy this comment", @comment, method: :delete %>
  <% end %>
  <%= link_to "Back to comments", movie_comments_path %>
</div>
