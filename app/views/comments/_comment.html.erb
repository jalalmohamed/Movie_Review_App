<table>
  <thead>
  <tr>
    <th>List of Comments:</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% comments.each do |comment| %>
    <tr>
      <td><%= comment.description %></td>
      <% if can? :edit, comment %>
        <td><%= link_to 'Edit', edit_movie_comment_path(@movie, comment), remote: true %></td>
        <td><%= link_to 'Destroy', movie_comment_path(@movie, comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% else %>
        <td></td>
        <td></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>