<div class="col-lg-6 mx-lg-auto">
  <div class="card shadow">
    <div class="card-header">
      <h2 class="card-title text-center">Sign up</h2>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="form-group mb-2">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
        </div>

        <div class="form-group mb-2">
          <%= f.label :password , class: "mb-2"%>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" , required: true%>
        </div>

        <div class="form-group mb-2">
          <%= f.label :password_confirmation , class: "mb-2"%><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true %><br>
        </div>

        <div class="form-group mb-2 text-center">
          <%= f.submit "Sign up", class: "btn btn-success btn-lg" %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
  </div>
</div>

